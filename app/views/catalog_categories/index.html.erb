<% content_for :sidebar do %>
  <div id="sidebar" role="navigation">
    <div class="jumbotron">
      <h3>Categorias de catalogos</h3>   
      <div class="list-group">
            <%= link_to "Todas las categorias", catalog_categories_path, class: "list-group-item active" %>
            <%= link_to "Nueva categoria", new_catalog_category_path, class: "list-group-item" %>
      </div>
    </div>
  </div>
<% end %>

<% content_for :content do %>
  <% if notice != nil %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong><%= notice['catalog_error'] %></strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% end %>
  <table class="table table-striped table-responsive-md btn-table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @catalog_categories.each do |catalog_category| %>
        <tr>
          <td><%= catalog_category.name %></td>
          <td>
            <%= link_to 'Editar', edit_catalog_category_path(catalog_category), class: "btn btn-primary btn-sm m-0" %>
            <%= link_to 'Eliminar', catalog_category, method: :delete, data: { confirm: 'La categoria se eliminara, desea continuar?' }, class: "btn btn-danger btn-sm m-0" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% end %>
