<% content_for :css do %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<% end %>

<% content_for :sidebar do %>
  <div id="sidebar" role="navigation">
    <div class="jumbotron">
      <h3>Peliculas</h3>   
      <div class="list-group">
        <% if can? :update, @movie %>
            <%= link_to 'Editar', edit_movie_path(@movie), class: "list-group-item " %> 
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<% content_for :content do %>
<div>
    <div class="container jumbotron single-catalog-container"> 
        <div style="margin-left: -15px !important">
            <p class="catalog-title">
                <%= @movie.title %>
            </p>
        </div>
      <div class="row">
        <%= image_tag(@movie.image, width: 300, height: 400) %>
        <div class="single-catalog">
    
          <div class="d-flex justify-content-start categories_container ">
              <% @movie.movie_categories.each do | category | %>
                <div class="category_container">
                    <p class="movie_category"><%= category.name %></p>
                </div>
              <% end %>
          </div>
          <div class="container actors_directors_container">
            <div>
              <h4>Directores</h4>
              <p><%= @movie.directors %></p>
            </div>
            <div>
              <h4>Actores</h4>
              <p><%= @movie.actors %></p>
            </div>
          </div>
    
      </div>
    </div>
<% end %>