<% content_for :sidebar do %>
  <div id="sidebar" role="navigation">
    <div class="jumbotron">
      <h3>Estilos musicales</h3>   
      <div class="list-group">
            <%= link_to "Todos los estilos", music_categories_path, class: "list-group-item active" %>
            <%= link_to "Nuevo estilo", new_music_category_path, class: "list-group-item" %>
      </div>
    </div>
  </div>
<% end %>

<% content_for :content do %>
  <% if notice != nil %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong><%= notice['music_category_error'] %></strong>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
  <table class="table table-striped table-responsive-md btn-table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @music_categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td>
            <%= link_to 'Editar', edit_music_category_path(category), class: "btn btn-primary btn-sm m-0" %>
            <%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'El estilo se eliminara, desea continuar?' }, class: "btn btn-danger btn-sm m-0" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% end %>
