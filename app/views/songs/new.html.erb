<% content_for :css do %>
  <%= stylesheet_link_tag  'sidebar', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<% content_for :sidebar do %>
<div id="sidebar" role="navigation">
    <div class="jumbotron">
      <h3>Canciones</h3>   
      <div class="list-group">
            <%= link_to "Todas las canciones", songs_path, class: "list-group-item" %>
            <%= link_to "Nueva cancion", new_song_path, class: "list-group-item active" %>
      </div>
    </div>
  </div>
<% end %>

<% content_for :content do %>
    <div class="col-lg-6 offset-lg-3">
        <%= render 'form', song: @song %>
    </div><br>

<% end %>